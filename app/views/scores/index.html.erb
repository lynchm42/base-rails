<div>
  <div>
    <h1>
      List of all scores
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new score
    </h2>

    <form action="/insert_score" method="post">
      <div>
        <label for="score_box">
          Score
        </label>

        <input type="text" id="score_box" name="query_score">
      </div>

      <div>
        <label for="option_id_box">
          Option
        </label>

        <input type="text" id="option_id_box" name="query_option_id">
      </div>

      <div>
        <label for="criteria_id_box">
          Criteria
        </label>

        <input type="text" id="criteria_id_box" name="query_criteria_id">
      </div>

      <button>
        Create score
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Score
        </th>

        <th>
          Option
        </th>

        <th>
          Criteria
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_scores.each do |a_score| %>
      <tr>
        <td>
          <%= a_score.id %>
        </td>

        <td>
          <%= a_score.score %>
        </td>

        <td>
          <%= a_score.option_id %>
        </td>

        <td>
          <%= a_score.criteria_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_score.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_score.updated_at) %> ago
        </td>

        <td>
          <a href="/scores/<%= a_score.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
