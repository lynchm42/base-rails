<div>
  <div>
    <h1>
      Option #<%= @the_option.id %> details
    </h1>

    <div>
      <div>
        <a href="/options">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_option/<%= @the_option.id %>">
          Delete option
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_option.name %>
      </dd>

      <dt>
        Decision
      </dt>
      <dd>
        <%= @the_option.decision_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_option.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_option.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit option
    </h2>

    <form action="/modify_option/<%= @the_option.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_option.name %>">
      </div>

      <div>
        <label for="decision_id_box">
          Decision
        </label>

        <input type="text" id="decision_id_box" name="query_decision_id" value="<%= @the_option.decision_id %>">
      </div>

      <button>
        Update option
      </button>
    </form>
  </div>
</div>

<hr>
